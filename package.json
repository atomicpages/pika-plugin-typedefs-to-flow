{
    "name": "pika-plugin-typedefs-to-flow",
    "version": "0.0.2",
    "description": "A @pika/pack plugin to covert typescripts types to flow types",
    "main": "index.js",
    "scripts": {
        "build": "rimraf pkg && pika build",
        "test": "cd test && npm t",
        "version": "npm run build",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atomicpages/pika-plugin-typedefs-to-flow"
    },
    "bugs": {
        "url": "https://github.com/atomicpages/pika-plugin-typedefs-to-flow/issues"
    },
    "keywords": [],
    "author": "Dennis Thompson",
    "license": "MIT",
    "lint-staged": {
        "*.{ts,tsx,js,json}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg"
            ],
            [
                "@pika/plugin-build-node"
            ]
        ]
    },
    "devDependencies": {
        "@djthoms/eslint-config": "^4.3.0",
        "@djthoms/prettier-config": "^3.0.0",
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.9.2",
        "@pika/plugin-ts-standard-pkg": "^0.9.2",
        "@types/mkdirp": "^1.0.0",
        "flowgen": "^1.13.0",
        "husky": "^6.0.0",
        "lint-staged": "^10.5.4",
        "rimraf": "^3.0.2",
        "typescript": "^4.1.5"
    },
    "peerDependencies": {
        "flowgen": ">=1.10.0"
    },
    "dependencies": {
        "@pika/types": "^0.6.0",
        "glob": "^7.0.0",
        "mkdirp": "^1.0.0"
    },
    "prettier": "@djthoms/prettier-config"
}
